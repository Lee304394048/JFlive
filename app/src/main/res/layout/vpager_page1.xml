<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/page1_linear1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorRed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="关注好友的直播"
            android:textColor="@color/colorGray"
            android:textSize="14sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/page1_relat1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/page1_linear1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nv6"/>

        <TextView
            android:id="@+id/page1_relat1_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="您暂时没有好友直播"
            android:textColor="@color/colorWrite"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/page1_relat1_tv2"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_below="@+id/page1_relat1_tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_corners"
            android:gravity="center"
            android:text="去看看最新的精彩直播"
            android:textColor="@color/colorWrite"
            android:textSize="12sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/page1_linear2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/page1_relat1"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorRed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="您可能感兴趣"
            android:textColor="@color/colorGray"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/page1_linear2"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <include
                android:id="@+id/include_page1"
                layout="@layout/item_incude"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <include
                android:id="@+id/include_page1"
                layout="@layout/item_incude"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <include
                android:id="@+id/include_page1"
                layout="@layout/item_incude"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
